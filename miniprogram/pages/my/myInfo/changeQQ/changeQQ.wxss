/* miniprogram/pages/my/myInfo/changeQQ/changeQQ.wxss */
page{
  background-color: #eee;
}
.name{
  padding: 30px 0;
}
.name input{
  border-bottom: 1px #b2b3b4 solid;
}

.name .click{
  margin-top: 10px;
}
.name .click view{
  color: #c5c4c4;
  font-size: 10px;
}

.name .click .cun{
  text-align: center;
  display: flex;
  justify-content: center;
}
.name .click .cun button{
  display: inline-block;
  margin-top: 30px;
  width: 100px;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
  color: #fff;
  background-color: rgb(55, 248, 97);
}