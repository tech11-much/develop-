<!--miniprogram/pages/my/myInfo/myInfo.wxml-->
<view class="part1 layer1">
  <view class="layer part1">
  <view class="txt">点击下方头像替换</view>
  <image bindtap="handleUploadImage" src="{{userPhoto}}" mode="aspectFit"></image>
  <view>
    <button disabled="{{disabled}}" class="cun" bindtap="handleBtn">保存头像</button>
  </view>
</view>
  <view class="name layer">
  <input class="weui-input" type="number" value="{{nickName}}" maxlength="11" placeholder="{{nikename}}" bindinput="handleNickname"/>
  <view class="click">
    <view class="cun">
      <button disabled="{{disabled}}" bindtap="handleBtnName">保存昵称</button>
    </view>
  </view>
</view>

  <view class="name layer">
  <input class="weui-input" type="number" value="{{weixinNumber}}" maxlength="11" placeholder="weixinNumber" bindinput="handleText"/>
  <view class="click">
    <view>正确填写微信号方便与他人更好地交流</view>
    <view class="cun">
      <button disabled="{{disabled}}" bindtap="handleBtnWeixin">保存微信号</button>
    </view>
  </view>
</view>
  <view class="name layer">
  <input class="weui-input" type="number" value="{{qqNumber}}" maxlength="11" placeholder="qqNumber" bindinput="handleQq"/>
  <view class="click">
    <view>正确填写QQ号方便与他人更好地交流</view>
    <view class="cun">
      <button disabled="{{disabled}}" bindtap="handleBtnQq">保存QQ号码</button>
    </view>
  </view>
</view>

</view>
